<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    tools:context=".ui.DashboardActivity">

    <FrameLayout
        android:id="@+id/header_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/dark_green"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="@dimen/menu_icons_size"
            android:layout_height="@dimen/menu_icons_size"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="16dp"
            android:background="@null"
            android:src="@drawable/ic_back"
            app:tint="@color/off_white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_initials"
                android:layout_width="@dimen/initials_circle_background_40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_image"
                android:gravity="center"
                android:textColor="@color/dark_green"
                tools:text="AV" />

            <TextView
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/bagel_fat_one"
                android:text="Chat"
                android:textColor="@color/off_white"
                android:textSize="24sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/menu_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/off_white"
            android:spinnerMode="dropdown" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMessages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintBottom_toTopOf="@id/inputContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

<!--    <FrameLayout-->
<!--        android:id="@+id/container"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_constraintBottom_toTopOf="@id/inputContainer"/>-->

    <ProgressBar
        android:layout_marginTop="16dp"
        android:id="@+id/progress_circular"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:backgroundTint="@color/dark_green"
        app:layout_constraintTop_toBottomOf="@id/recyclerMessages"
        app:layout_constraintBottom_toTopOf="@id/inputContainer"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="68dp"
        android:visibility="gone"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_photo"
        android:layout_marginStart="16dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toTopOf="@id/inputContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <LinearLayout
        android:id="@+id/inputContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:gravity="center_vertical"
            android:hint="Message"
            android:imeOptions="actionSend"
            android:inputType="text" />



        <ImageButton
            android:contentDescription="add_photo_button"
            android:id="@+id/btn_image"
            android:layout_width="30dp"
            android:scaleType="centerCrop"
            android:layout_height="30dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/add_photo_icon"
            android:background="@android:color/transparent"
            app:tint="@color/dark_green"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:src="@drawable/ic_send"
            android:contentDescription="Send" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>