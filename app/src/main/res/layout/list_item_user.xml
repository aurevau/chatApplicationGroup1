<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/list_item_corner_radius_10dp"
    android:layout_margin="@dimen/margin_6dp"
    android:backgroundTint="@color/dark_green">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_20dp">

        <TextView
            android:id="@+id/tv_initials"
            android:layout_width="@dimen/initials_circle_background_40dp"
            android:layout_height="@dimen/initials_circle_background_40dp"
            tools:text="@string/initials_default_text"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/circle_image"
            android:textColor="@color/dark_green"/>



        <TextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/normal_text_size_16sp"
            android:textStyle="bold"
            android:textColor="@color/off_white"
            android:layout_marginStart="@dimen/margin_16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_initials"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/list_item_name_default_text"/>

        <TextView
            android:id="@+id/tv_add_friend"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/off_white"
            android:layout_marginStart="@dimen/margin_16dp"
            app:layout_constraintStart_toEndOf="@id/tv_initials"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            android:text="@string/add_friend"/>

        <TextView
            android:id="@+id/tv_delete_friend"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/off_white"
            android:layout_marginStart="@dimen/margin_16dp"
            app:layout_constraintStart_toEndOf="@id/tv_initials"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            android:text="@string/friends"/>


        <Button
            android:id="@+id/btn_start_chat"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_48dp"
            android:backgroundTint="@color/off_white"
            android:text="@string/open_chat"
            android:textColor="@color/dark_green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:clickable="true"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>